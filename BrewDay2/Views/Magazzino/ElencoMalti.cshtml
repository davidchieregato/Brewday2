@model BrewDay2.Models.Magazzino

<table class="table"><thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MaltiUtente.FirstOrDefault().Malto.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaltiUtente.FirstOrDefault().Malto.Descrizione)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaltiUtente.FirstOrDefault().Malto.Produttore)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaltiUtente.FirstOrDefault().Quantita)
        </th>
        <th>.</th>
    </tr>
</thead>
<tbody>
    @foreach (var item in Model.MaltiUtente)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Malto.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Malto.Descrizione)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Malto.Produttore)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantita)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditMalti", new { id = item.MaltiId, idr = Model.MagazzinoId })
                @*    @Html.ActionLink("Details", "Details", new { id = item.AdditiviId, idr = Model.RicettaId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.AdditiviId, idr = Model.RicettaId })*@
            </td>
        </tr>
    }

</tbody></table>
