@model IEnumerable<BrewDay2.Models.Additivi>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table"><thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descrizione)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Produttore)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Prezzo)
        </th>
        <th>prop</th>
    </tr>

</thead><tbody>@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descrizione)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Produttore)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Prezzo)
        </td>
        @if (ViewBag.me != null && ViewBag.me == item.UserId)
        {
            <td>
                @Html.ActionLink("Edit", "Edit", new {id = item.AdditiviId}) |
                @Html.ActionLink("Details", "Details", new {id = item.AdditiviId}) |
                @Html.ActionLink("Delete", "Delete", new {id = item.AdditiviId})
            </td>
        }
        else
        {
            <td>
                Impossibile editare
            </td>
        }
    </tr>
}

</tbody></table>
